    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title نموذج تسجيل المشاكل
    script(defer src='/js/form.js')
    - const domain = process.env.DOMAIN_ACTIVE === 'local'? process.env.DOMAIN_LOCAL : process.env.DOMAIN_RENDER;
    style.
      body {
        font-family: "Cairo", sans-serif;
        background: linear-gradient(135deg, #f0f2f5 0%, #dfe6e9 100%);
        margin: 0;
        padding: 1rem;
        color: #333;
      }
      form {
        width: 100%;
        max-width: 700px;
        margin: auto;
        background: #fff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 8px 24px rgba(0,0,0,0.1);
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }
      h1 {
        text-align: center;
        margin-bottom: 1rem;
        color: #2c3e50;
        font-size: clamp(1.4rem, 2vw, 2rem);
      }
      label {
        font-weight: bold;
        color: #444;
      }
      input, textarea, select {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 8px;
        font-size: 1rem;
        background: #fafafa;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
      }
      input:focus, textarea:focus, select:focus {
        border-color: #3498db;
        box-shadow: 0 0 6px rgba(52,152,219,0.3);
        outline: none;
        background: #fff;
      }
      textarea {
        resize: none; /* fixed size */
      }
      button {
        padding: 14px;
        background: linear-gradient(135deg, #3498db, #2980b9);
        color: #fff;
        font-size: 1rem;
        font-weight: bold;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
      }
      button:hover {
        background: linear-gradient(135deg, #2980b9, #1f6391);
        transform: scale(1.03);
        box-shadow: 0 6px 15px rgba(0,0,0,0.2);
      }
      /* Mobile full-screen form */
      @media (max-width: 480px) {
        body {
          padding: 0;
          background: #fff; /* remove gradient for clarity */
        }
        form {
          max-width: none;
          width: 100%;
          height: 100vh; /* take full screen height */
          margin: 0;
          border-radius: 0;
          box-shadow: none;
          padding: 20px;
        }
        h1 {
          font-size: 1.4rem;
          margin-bottom: 1rem;
        }
        input, textarea, select, button {
          font-size: 0.95rem;
        }
      }
