      .logo
        img.list-icon(src="/imgs/list.png", alt="Icon", width="24", height="24")
      .text-of-logo
        p.studyou StudyYou   
      - if(user)        
        .atp 
          p.text  ATP  
          p.text2= `${user.value}`           
      nav.nav.hidden
        a(href=`${domain}`) Home
