doctype html
html(lang="ar", dir="rtl")
  head
  meta(charset="UTF-8")
  link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=menu")
  meta(name="viewport", content="width=device-width, initial-scale=1.0")
  title StudyYou
  link(rel='stylesheet', href='/css/newMain.css')
  meta(name='description', content=`${metaContent}`)
  link(rel="icon" type="image/x-icon" href="/imgs/favicon.ico")
  - const domain = process.env.DOMAIN_ACTIVE === 'local'? process.env.DOMAIN_LOCAL : process.env.DOMAIN_RENDER;
  body(data-domain = `${domain}` , data-role=`${user ? user.role : undefined}`, style='background-image: url(/imgs/backgroundImage.png);')
    header.navbar
      .logo
        img.list-icon(src="/imgs/list.png", alt="Icon", width="24", height="24")
        .text-of-logo  StudyYou
      nav.nav.hidden
        a(href=`${domain}`) Home
        - if(user)
          a(href="/settings") Settings
        - if(!user)
          a(href='/sign-up') Sign up
        a.classes-btn(href="#") Classes
      nav.nav1
        a(href=`${domain}`) Home
        - if(user)
          a(href="/settings") Settings
        - if(!user)
          a(href='/sign-up') Sign up
        a.classes-btn(href="#") Classes
    .error.hidden
      #site-toasts(aria-live="polite" dir="rtl")
      .toast.toast-success.show.hidden(role="status" aria-hidden="false")
        span.toast-icon
          svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="20" height="20")
            path(d="M20 6L9 17l-5-5" fill="none" stroke="currentColor" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round")
        .toast-text لقد تمت العملية بنجاح

      .toast.toast-error.show.hidden(role="alert" aria-hidden="false")
        span.toast-icon
          svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="20" height="20")
            path(d="M12 8v4M12 16h.01M21 12A9 9 0 1 1 3 12a9 9 0 0 1 18 0z" fill="none" stroke="currentColor" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round")
        .toast-text هنالك خطأ
    .backdrop.hidden
      .popup-message
        h2 &#x647;&#x644; &#x62A;&#x631;&#x64A;&#x62F; &#x634;&#x631;&#x627;&#x621; &#x627;&#x644;&#x643;&#x648;&#x631;&#x633;&#x61F;
        .buttons
          button.confirm-btn &#x62A;&#x623;&#x643;&#x64A;&#x62F;
          button.cancel-btn &#x625;&#x644;&#x63A;&#x627;&#x621;        
    block content
    footer.site-footer
      .footer-container
        .footer-grid
          .footer-info
            h3.footer-title Iyad Sukkar
            p.footer-description Creating digital experiences that combine innovative technology with beautiful design.
            .social-links
              a.social-icon-link(href="#")
                i(data-feather="github")
              a.social-icon-link(href="#")
                i(data-feather="twitter")
              a.social-icon-link(href="#")
                i(data-feather="linkedin")
              a.social-icon-link(href="#")
                i(data-feather="dribbble")
          .footer-links-column
            h4.column-title Quick Links
            ul.link-list
              li
                a.footer-link(href="#") Home
              li
                a.footer-link(href="#") About
              li
                a.footer-link(href="#") Projects
              li
                a.footer-link(href="#") Contact
          .footer-links-column
            h4.column-title Services
            ul.link-list
              li
                a.footer-link(href="#") Web Development
              li
                a.footer-link(href="#") UI/UX Design
              li
                a.footer-link(href="#") Mobile Apps
              li
                a.footer-link(href="#") Consulting
        .footer-bottom
          p.copyright-text © 2023 iyad sukkar. All rights reserved.
          .privacy-links
            a.footer-link(href="#") Privacy Policy
            a.footer-link(href="#") Terms of Service
    - if(user && user.role === 'admin')
      .upload-btn= '+'
    block scripts