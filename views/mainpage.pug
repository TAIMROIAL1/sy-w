doctype html
html(lang="ar", dir="rtl")
  head
    meta(charset="UTF-8")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=menu")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title StudyYou
    link(rel='stylesheet', href='/css/newMain.css')
  - const domain = process.env.DOMAIN_ACTIVE === 'local'? process.env.DOMAIN_LOCAL : process.env.DOMAIN_RENDER;
  body(data-domain = `${domain}` , data-role=`${user ? user.role : undefined}`)
    // الهيدر
    .header-nav
      header.navbar
        .logo
          img.list-icon(src="/imgs/list.png", alt="Icon", width="24", height="24")
          .text-of-logo  StudyYou
        nav.nav.hidden
          a(href=`${domain}`) Home
          - if(user)
            a(href="/settings") Settings
          - if(!user)
            a(href='/sign-up') Sign up
          a.classes-btn(href="#") Classes
      // القسم الرئيسي
      .promo
        section.hero
          //- img(src='/imgs/iyad.jpg')
          
          h1 مستقبلك في يديك...هنا تفهم العلوم وتحسها سكرة 
          p أهلا وسهلا في بيتك التاني !
          p رح تلاقي كلشي بتحتاجه لتتفوق بالعلوم
          p خطة منظمة،شرح سهل ومتابعة مستمرة لحد ما توصل
          a(href='/sign-up') أنشئ حسابك الآن
          p مين د إياد سكر ؟!
          P إياد سكر مدرس علم أحياء ،إلي سنوات بساعد الطلاب يوصلوا للكلية الهدف يلي الن سنوات بيحلموا فيها..كل ما تحتاجه رح تلاقي هنا بالمنصة السكرية
    section.courses
      h2 ليه تشترك معانا؟
      .cards
        // كارت  ابو وائل مطور ويب
        a.card.purple
          p.num 1
          p.card-des شرح بسيط و مفهوم
        a.card.purple
          p.num 2
          p.card-des فيديوهات برسومات توضيحية
        a.card.purple
          p.num 3
          p.card-des تمارين تفاعلية على الدروس
        a.card.purple
          p.num 4
          p.card-des مرونة كاملة في المذاكرة
        a.card.purple
          p.num 5
          p.card-des اختبارات مستمرة
        a.card.purple
          p.num 6
          p.card-des محتوى متكامل ومنظم
    .courses
      h2 بعض الكورسات التي قد تعجبك
      .cards
        // كارت  ابو وائل مطور ويب
        a.card.purple
          - if(user?.role === 'admin')
            i.bi-trash(data-deletecount="0") &amp;#128465;
            svg.bi-edit(xmlns="http://www.w3.org/2000/svg", width="16", height="16", fill="currentColor", viewBox="0 0 16 16")
              path(d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z")
              path(fill-rule="evenodd", d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z")
          .card-header
            p كورس العصبية 
            //- span.progress 84% 🌙
          p.duration ⏰ اضبط ساعتك يوم السبت والاثنين والأربعاء ع 8 مساءً 
          p 📘 11 درس عصبية لنبدأ الرحلة ... حلمك يبدأ بخطوة 
          .tags
            span شرح 
            span حل 
            span اختبارات
            span متابعة دورية
          p.salary
            | 💰 السعر : 100 ATP
        // كارت علم البيانات
        .card.green
          .card-header
            p التكاثر
            span.progress 82% 🌙
          p.students 👨‍🎓 12,350 طالب
          p.duration ⏰ 4-6 أشهر
          p مسار شامل لحفظ التكاثر
          .tags
            span الولادة 
            span الدورة 
            span التنامي الجنيني
            span اعصاب 
            span قلبية 
          p.salary
            | 💰 الراتب المتوقع: 10,000 – 20,000 ريال
        .card.green
          .card-header
            p التكاثر
            span.progress 82% 🌙
          p.students 👨‍🎓 12,350 طالب
          p.duration ⏰ 4-6 أشهر
          p مسار شامل لحفظ التكاثر
          .tags
            span الولادة 
            span الدورة 
            span التنامي الجنيني
            span اعصاب 
            span قلبية 
          p.salary
            | 💰 الراتب المتوقع: 10,000 – 20,000 ريال
      // المسارات
      section.courses#classes-section
        h2 مسارات التعلم الموصى بها
        p اكتشف مسارات التعلم المصممة خصيصاً لتلائم أهدافك المهنية وتطوير مهاراتك بشكل منهجي
        .cards.classes
          // كارت  ابو وائل مطور ويب
          each c in classes
            .card.green(data-classid=`${c._id}`, href=`/classes/${c._id}/courses`)
              - if(user?.role === 'admin')
                <i class="bi-trash" data-deletecount="0">&#128465;</i>
                svg.bi-edit(xmlns="http://www.w3.org/2000/svg", width="16", height="16", fill="currentColor", viewBox="0 0 16 16")
                  path(d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z")
                  path(fill-rule="evenodd", d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z")
              .card-header
                p= c.title 
                //- span.progress 84% 🌙
              p.duration ⏰ اضبط ساعتك و جهز مشروبك المفضل و ابدأ مع السكر
              p مش ضروري تكون عبقري حتى تمشي مع الدكتور إياد...المهم اصرارك... هنا تفهم العلوم
              .tags
                span شرح 
                span حل 
                span اختبارات
                span متابعة دورية
                span تقييم مستوى
      section.contact-section
        .contact-container
          .section-header
            h2.section-title تواصل معنا 
            .title-underline
          .contact-content-grid
            .contact-info-container
              h3.contact-subtitle لنتكلم عن مشكاتك 
              p.contact-text
                | I&apos;m currently available for freelance work. If you have a project that you want to get started, think you need my help with something, or just fancy saying hello, then get in touch.
              .contact-details-list
                .contact-detail-item
                  .icon-bg
                    i.icon-color(data-feather="mail")
                  span.detail-text rayansalameh@gmail.com
                .contact-detail-item
                  .icon-bg
                    i.icon-color(data-feather="phone")
                  span.detail-text 0949808802
                .contact-detail-item
                  .icon-bg
                    i.icon-color(data-feather="map-pin")
                  span.detail-text syria
            .contact-form-container
              form.contact-form
                div
                  label.form-label(for="name") الاسم
                  input#name.form-input(type="text", name="name", required)
                div
                  label.form-label(for="email") الايميل 
                  input#email.form-input(type="email", name="email", required)
                div
                  label.form-label(for="message") الرسالة
                  textarea#message.form-textarea(name="message", rows="5", required)
                button.submit-button(type="submit")
                  | ارسال الرسالة
      footer.site-footer
        .footer-container
          .footer-grid
            .footer-info
              h3.footer-title Iyad Sukkar
              p.footer-description Creating digital experiences that combine innovative technology with beautiful design.
              .social-links
                a.social-icon-link(href="#")
                  i(data-feather="github")
                a.social-icon-link(href="#")
                  i(data-feather="twitter")
                a.social-icon-link(href="#")
                  i(data-feather="linkedin")
                a.social-icon-link(href="#")
                  i(data-feather="dribbble")
            .footer-links-column
              h4.column-title Quick Links
              ul.link-list
                li
                  a.footer-link(href="#") Home
                li
                  a.footer-link(href="#") About
                li
                  a.footer-link(href="#") Projects
                li
                  a.footer-link(href="#") Contact
            .footer-links-column
              h4.column-title Services
              ul.link-list
                li
                  a.footer-link(href="#") Web Development
                li
                  a.footer-link(href="#") UI/UX Design
                li
                  a.footer-link(href="#") Mobile Apps
                li
                  a.footer-link(href="#") Consulting
          .footer-bottom
            p.copyright-text © 2023 iyad sukkar. All rights reserved.
            .privacy-links
              a.footer-link(href="#") Privacy Policy
              a.footer-link(href="#") Terms of Service
block scripts
  script(defer, type='module', src='/js/main.js')